{% extends 'base.html.twig' %}

{% block title %}CategoryProduct{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md">
                <h1>CategoryProduct</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ category_product.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ category_product.name }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ category_product.description }}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_dashboard_category_product_index') }}" class="btn btn--red">back to list</a>

                <a href="{{ path('app_dashboard_category_product_edit', {'id': category_product.id}) }}" class="btn btn--red"><i class="fa fa-edit"></i> edit</a>

                {{ include('dashboard/category_product/_delete_form.html.twig') }}            
            </div>
        </div>
    </div>
{% endblock %}
