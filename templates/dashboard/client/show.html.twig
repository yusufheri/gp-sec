{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <div class="container">
        <h1>Client</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ client.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ client.name }}</td>
                </tr>
                <tr>
                    <th>Picture</th>
                    <td>{{ client.picture }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ client.updatedAt ? client.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Website</th>
                    <td>{{ client.website }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ client.email }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ client.phone }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_dashboard_client_index') }}">back to list</a>

        <a href="{{ path('app_dashboard_client_edit', {'id': client.id}) }}">edit</a>

        {{ include('dashboard/client/_delete_form.html.twig') }}    
    </div>
{% endblock %}
