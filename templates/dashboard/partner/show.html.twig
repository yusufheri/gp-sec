{% extends 'base.html.twig' %}

{% block title %}Partner{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md">
                <h1>Partner</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ partner.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ partner.name }}</td>
                        </tr>
                        <tr>
                            <th>Picture</th>
                            <td>{{ partner.picture }}</td>
                        </tr>
                        <tr>
                            <th>UpdatedAt</th>
                            <td>{{ partner.updatedAt ? partner.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ partner.description }}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_dashboard_partner_index') }}" class="btn btn--blue">back to list</a>

                <a href="{{ path('app_dashboard_partner_edit', {'id': partner.id}) }}" class="btn btn--red" ><i class="fa fa-edit"></i> edit</a>

                {{ include('dashboard/partner/_delete_form.html.twig') }}            
            </div>
        </div>
    </div>
{% endblock %}
