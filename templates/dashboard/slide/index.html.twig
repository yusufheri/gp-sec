{% extends 'base.html.twig' %}

{% block title %}Slide index{% endblock %}

{% block body %}
    <h1>Slide index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for slide in slides %}
            <tr>
                <td>{{ slide.title }}  {{ slide.urlButton }}</td>
                <td>
                    <a href="{{ path('app_dashboard_slide_show', {'id': slide.id}) }}">show</a>
                    <a href="{{ path('app_dashboard_slide_edit', {'id': slide.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-danger" href="{{ path('app_dashboard_slide_new') }}">Create new</a>
{% endblock %}
