{% extends 'base.html.twig' %}

{% block title %}Testimonial{% endblock %}

{% block body %}
    <div class="container u-margin-top-small">
        <div class="row">
            <div class="col-md">
                <h1>Testimonial</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ testimonial.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ testimonial.name }}</td>
                        </tr>
                        <tr>
                            <th>Grade</th>
                            <td>{{ testimonial.grade }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ testimonial.description }}</td>
                        </tr>
                        <tr>
                            <th>Picture</th>
                            <td>{{ testimonial.picture }}</td>
                        </tr>
                        <tr>
                            <th>UpdatedAt</th>
                            <td>{{ testimonial.updatedAt ? testimonial.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_dashboard_testimonial_index') }}">back to list</a>

                <a href="{{ path('app_dashboard_testimonial_edit', {'id': testimonial.id}) }}">edit</a>

                {{ include('dashboard/testimonial/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
