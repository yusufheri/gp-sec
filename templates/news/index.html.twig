{% extends 'base.html.twig' %}

{% block title %}Dernières actualités{% endblock %}

{% block body %}
     <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <ol>
          <li><a href="{{ path('app_home') }}">Page d'accueil</a></li>
          <li>Dernières actualités</li>
        </ol>
        <h2>News</h2>

      </div>
    </section><!-- End Breadcrumbs -->


    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
      <div class="container" data-aos="fade-up">

        <div class="row">

          <div class="col-lg-8 entries">
            {% for news in data %}
              <article class="entry">

                <div class="entry-img">
                  <img src="{{ asset('media/pictures/'~news.picture)}}" alt=""{{ news.name }} class="img-fluid">
                </div>

                <h2 class="entry-title">
                  <a href="blog-single.html">{{ news.name }}</a>
                </h2>

                <div class="entry-meta">
                  <ul>
                    <li class="d-flex align-items-center"><i class="bi bi-person"></i> <a href="blog-single.html">Admin</a></li>
                    <li class="d-flex align-items-center"><i class="bi bi-clock"></i> <a href="blog-single.html"><time datetime="2020-01-01">{{ news.publiedAt|date() }}</time></a></li>
                    <li class="d-flex align-items-center"><i class="bi bi-chat-dots"></i> <a href="blog-single.html">0 Commentaires</a></li>
                  </ul>
                </div>

                <div class="entry-content">
                  <p class="justify-text">{{ news.description }}</p>
                  <div class="read-more">
                    <a href="{{ path('app_news_show', {'id': news.id}) }}">Lire plus...</a>
                  </div>
                </div>

              </article>              
            {% endfor %}

            <!--<div class="blog-pagination">
              <ul class="justify-content-center">
                <li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
              </ul>
            </div>-->

          </div><!-- End blog entries list -->

          <div class="col-lg-4">

            <div class="sidebar">

              <h3 class="sidebar-title">Recherche</h3>
              <div class="sidebar-item search-form">
                <form action="">
                  <input type="text">
                  <button type="submit"><i class="bi bi-search"></i></button>
                </form>
              </div><!-- End sidebar search formn-->

              <h3 class="sidebar-title">Categories</h3>
              <div class="sidebar-item categories">
                <ul>
                  {% for cat in categories %}
                      <li><a href="#">{{ cat.name }} <span>({{cat.news|length}})</span></a></li>
                  {% endfor %}
                </ul>
              </div><!-- End sidebar categories-->

              <h3 class="sidebar-title">Dernières actualités</h3>
              {% for news in lastNews %}
                  <div class="sidebar-item recent-posts">
                    <div class="post-item clearfix">
                      <img src="{{asset('media/pictures/'~news.picture)}}" alt="">
                      <h4><a href="{{ path('app_news_show', {'id': news.id}) }}">{{news.name}}</a></h4>
                      <time datetime="2020-01-01">{{news.publiedAt|date()}}</time>
                    </div>
                  </div>
              {% endfor %}
              <!--<h3 class="sidebar-title">Tags</h3>
              <div class="sidebar-item tags">
                <ul>
                  <li><a href="#">App</a></li>
                  <li><a href="#">IT</a></li>
                  <li><a href="#">Business</a></li>
                  <li><a href="#">Mac</a></li>
