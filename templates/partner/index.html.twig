{% extends 'base.html.twig' %}

{% block title %}Nos services{% endblock %}

{% block body %}
<!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <ol>
          <li><a href="{{ path('app_home') }}">Page d'accueil</a></li>
          <li>Clients</li>
        </ol>
        <h2>Nos Clients</h2>

      </div>
    </section><!-- End Breadcrumbs -->

     <!-- ======= Services Section ======= -->
    <section id="services" class="services">
      <div class="container">

        <div class="row">
          

          {% for p in p %}
              <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4">
                <div style="box-shadow: none!important;" class="icon-box">
                  <div class="icon">
                     <img style="border-radius: 8px;width: 150px;height: 20vh;" src="{{ asset('media/pictures/'~p.picture) }}" class="flex-shrink-0" alt="">
                  </div><br>
                  <h4><a href="">{{ p.name }}</a></h4>
                  <p class="justify-text">{{ p.description }}</p>
                </div>
              </div>
          {% endfor %}

          

        </div>

      </div>
    </section><!-- End Services Section -->
{% endblock %}
