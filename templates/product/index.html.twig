{% extends 'base.html.twig' %}

{% block title %}Nos Produits{% endblock %}

{% block body %}
<!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <ol>
          <li><a href="{{ path('app_home') }}">Page d'accueil</a></li>
          <li>Produits</li>
        </ol>
        <h2>Nos Produits</h2>

      </div>
    </section><!-- End Breadcrumbs -->

     <!-- ======= Produits Section ======= -->
    <section id="produits" class="produits">
      <div class="container">

        <div class="row">
          

          {% for product in products %}
              <div class="col-lg-3 col-md-6 portfolio-item filter-printer">
                <div class="portfolio-wrap">
                  <img style="width: 100%; height: 47vh" src="{{ asset('profiles/'~product.picture) }}" class="img-fluid" alt="">
                  <div class="portfolio-info">
                    <div class="portfolio-links">
                      <a href="{{ asset('profiles/'~product.picture) }}" data-gallery="portfolioGallery" class="portfolio-lightbox" title="App 1"><i class="bx bx-plus"></i></a>
                    <!-- <a href="#" title="More Details"><i class="bx bx-link"></i></a>-->
                    </div>
                  </div>
                </div>
                <h1 style="font-size: 25px; text-align: center;"><small><a href="{{ path('app_product_show', {'id': product.id}) }}">{{ product.name }}</a></small></h1>
                <p style="font-size: 12px; text-align: center;"><a href="{{ path('app_product_show', {'id': product.id}) }}">{{ product.smalldescription }}</a></p>
              </div>    
          {% endfor %}

          

        </div>

      </div>
    </section><!-- End Services Section -->
{% endblock %}
